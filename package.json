{
  "name": "ecommerce",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "build": "npm run build:js && npm run build:css",
    "build:js": "webpack --mode production --progress --hide-modules",
    "build:css": "npm run build:css:user && npm run build:css:admin",
    "build:css:user": "node-sass ./resources/sass/main.scss ./public/css/main.css --output-style compressed",
    "build:css:admin": "node-sass ./resources/sass/admin/main.scss ./public/css/admin.css --output-style compressed",
    "dev:start": "nodemon ./bin/www",
    "dev:build": "concurrently \"npm run dev:build:js\" \"npm run dev:build:css\"",
    "dev:build:js": "webpack --mode development --progress --hide-modules --watch",
    "dev:build:css": "concurrently \"npm run dev:build:css:user\" \"npm run dev:build:css:admin\"",
    "dev:build:css:user": "node-sass ./resources/sass/main.scss ./public/css/main.css --watch",
    "dev:build:css:admin": "node-sass ./resources/sass/admin/main.scss ./public/css/admin.css --watch"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "connect-session-sequelize": "^6.0.0",
    "cookie-parser": "~1.4.4",
    "csurf": "^1.11.0",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-session": "^1.17.0",
    "express-validator": "^6.2.0",
    "http-errors": "~1.6.3",
    "morgan": "~1.9.1",
    "mysql2": "^2.1.0",
    "pug": "^2.0.4",
    "sequelize": "^5.21.3",
    "vue-filter-date-format": "^1.3.1",
    "vue-router": "^3.1.5",
    "vue-toasted": "^1.1.27",
    "vuelidate": "^0.7.5"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.7.7",
    "babel-loader": "^8.0.6",
    "concurrently": "^5.0.2",
    "css-loader": "^3.4.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.1.2",
    "vue": "^2.6.11",
    "vue-loader": "^15.8.3",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  }
}
